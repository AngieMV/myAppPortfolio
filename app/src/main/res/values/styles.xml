<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>
    <style name="button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="special_button" parent="button">
        <item name="android:background">@drawable/special_button_background</item>
    </style>
    <style name="portfolio_text">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
